   "source": [
    "import numpy as np\n",
    "def QR(f, xq, wq):\n",
    "    #f: integrand\n",
    "    #xq: quadrature nodes\n",
    "    #wq: quadrature weights\n",
    "    #@: notation for matrix multiplication\n",
    "    return np.array(wq)@f(np.array(xq))\n",
    "    \n",
    "xq = [0, 1]\n",
    "wq  =[1/2, 1/2]\n",
    "f = lambda x: np.cos((np.pi/2)*x)\n",
    "\n",
    "QR(f, xq, wq)\n"
   ]
  }
